
{
  "jsonrpc": "2.0",
  "id": 2,
  "result": {
    "tools": [
      {
        "name": "stepwise_run",
        "description": "Run a workflow file or directory",
        "inputSchema": {
          "properties": {
            "fail_fast": {
              "default": false,
              "description": "Stop execution on first test failure",
              "type": "boolean"
            },
            "html_report": {
              "default": false,
              "description": "Generate HTML report",
              "type": "boolean"
            },
            "html_report_path": {
              "description": "Path for HTML report file",
              "type": "string"
            },
            "parallel": {
              "default": 1,
              "description": "Number of parallel workflow executions",
              "type": "integer"
            },
            "path": {
              "description": "Path to workflow file or directory",
              "type": "string"
            },
            "recursive": {
              "default": false,
              "description": "Search recursively in subdirectories",
              "type": "boolean"
            },
            "verbose": {
              "default": false,
              "description": "Enable verbose logging",
              "type": "boolean"
            }
          },
          "required": [
            "path"
          ],
          "type": "object"
        }
      },
      {
        "name": "stepwise_validate",
        "description": "Validate a workflow file",
        "inputSchema": {
          "properties": {
            "path": {
              "description": "Path to workflow file",
              "type": "string"
            }
          },
          "required": [
            "path"
          ],
          "type": "object"
        }
      },
      {
        "name": "stepwise_info",
        "description": "Show workflow information",
        "inputSchema": {
          "properties": {
            "path": {
              "description": "Path to workflow file",
              "type": "string"
            }
          },
          "required": [
            "path"
          ],
          "type": "object"
        }
      }
    ]
  }
}